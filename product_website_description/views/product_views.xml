<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="product_template_form_description_view" model="ir.ui.view">
        <field name="name">product.template.common.description.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']/group[1]" positin="inside">
                <group colspan="4">
                    <field name="description" widget="text"/>
                </group>
            </xpath>
        </field>
    </record>
    </data>
</odoo>
